 <link rel="stylesheet" href="/style.css">

<h1>Edit Recipe</h1>
<form action="/recipes/{{recipe._id}}?_method=PUT" method="POST">
  <input type="hidden" name="_method" value="PUT"> 
  
  <label for="title">Recipe Name:</label>
  <input type="text" name="title" id="title" value="{{recipe.title}}" required><br>

  <label for="ingredients">Ingredients:</label>
  <textarea name="ingredients" id="ingredients" required>{{recipe.ingredients}}</textarea><br>

  <label for="instructions">Instructions:</label>
  <textarea name="instructions" id="instructions" required>{{recipe.instructions}}</textarea><br>

  <label for="prepTime">Prep Time (in minutes):</label>
  <input type="number" name="prepTime" id="prepTime" value="{{recipe.prepTime}}" required><br>

  <button type="submit">Update Recipe</button>
</form>
